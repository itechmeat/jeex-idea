# JEEX Idea Development Environment Configuration
# Copy this file to .env and customize values for your development environment

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL database password (REQUIRED)
# Generate a strong password for development
POSTGRES_PASSWORD=your_secure_postgres_password_here

# =============================================================================
# API Security Configuration
# =============================================================================

# JWT secret key for authentication (REQUIRED)
# Generate a strong secret key: openssl rand -hex 32
JWT_SECRET_KEY=your_jwt_secret_key_here_minimum_32_characters

# =============================================================================
# Development Environment Settings
# =============================================================================

# Environment type (development, staging, production)
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=true

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=DEBUG

# =============================================================================
# External Service Configuration
# =============================================================================

# OpenAI API Key (if using OpenAI for language detection)
# OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (if using Claude for language detection)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# Service Configuration
# =============================================================================

# API Service
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Frontend URL for CORS (comma-separated if multiple)
FRONTEND_URL=http://localhost:5200,http://localhost:3000

# =============================================================================
# Development Tooling Configuration
# =============================================================================

# Docker Compose project name
COMPOSE_PROJECT_NAME=jeex-idea

# Docker build arguments
BUILDKIT_PROGRESS=plain

# =============================================================================
# Performance and Resource Limits
# =============================================================================

# Database connection pool sizes
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis connection limits
REDIS_MAX_CONNECTIONS=10

# =============================================================================
# Monitoring and Observability
# =============================================================================

# OpenTelemetry configuration
OTEL_SERVICE_NAME=jeex-idea-api
OTEL_SERVICE_VERSION=0.1.0

# Enable performance monitoring (true/false)
ENABLE_PERFORMANCE_MONITORING=true

# =============================================================================
# Feature Flags
# =============================================================================

# Enable hot reload in development
ENABLE_HOT_RELOAD=true

# Enable debug middleware
ENABLE_DEBUG_MIDDLEWARE=true

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# =============================================================================
# Security Settings (Development)
# =============================================================================

# CORS settings
CORS_ORIGINS=http://localhost:5200,http://localhost:3000
CORS_CREDENTIALS=true

# Rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=100

# =============================================================================
# Local Development Ports
# =============================================================================

# Frontend development server port
FRONTEND_PORT=5200

# API external port
API_EXTERNAL_PORT=5210

# PostgreSQL external port
POSTGRES_EXTERNAL_PORT=5220

# Qdrant external port
QDRANT_EXTERNAL_PORT=5230

# Redis external port
REDIS_EXTERNAL_PORT=5240

# OpenTelemetry metrics port
OTEL_METRICS_PORT=8888

# =============================================================================
# Additional Notes
# =============================================================================

# 1. Never commit this .env file to version control
# 2. Use strong, unique passwords for development
# 3. Change default values before using in production
# 4. Keep this file secure and share only with trusted team members